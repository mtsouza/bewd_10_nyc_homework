<h1> Edit Link </h1>

<%= form_for @link do |f| %>

	<% if @link.errors.any? %>
	<h2> Errors: </h2>
	<ul>
		<% @link.errors.full_messages.each do |message| %>
		<li> <%= message %> </li>
	<% end %>
	</ul>
	<% end %>

	<p>
		<%= f.label :link %> <br/>
		<%= f.text_field :link %>
	</p>

	<p>
		<%= f.label :hashcode %> <br/>
		<%= f.text_area :hashcode %>
	</p>


	<p>
		<%= f.submit "Update Link" %>
	</p>

	
<% end %>