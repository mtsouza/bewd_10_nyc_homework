<h2> Add New Story </h2>



<%= form_for @story do |f| %>

  <% if @story.errors.any? %>
    <h2> Errors: </h2>
    <ul>
      <% @story.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
    </ul>
<% end %>


	<p>
		<%= f.label :title %> <br />
		<%= f.text_area :title %>
	</p>

	<p>
		<%= f.label :link %> <br />
		<%= f.text_area :link %>
	</p>

	<p>
		<%= f.label :upvotes %> <br />
		<%= f.text_field :upvotes %>
	</p>

	<p>
		<%= f.label :category %> <br />
		<%= f.text_field :category %>
	</p>

	<p> <%= f.submit "Submit" %></p>

	<% end %>
